<setup-config>

	<!--
		These files will be copied from the "from" location to the "to" location with values
		substituted in for the local environment
	-->
	<templates>
		<template from=".\asn\templates\setup.asn.template" to=".\asn\setup.asn"/>
		<template from=".\asn\templates\idf.asn.template" to=".\asn\idf.asn"/>
	</templates>

	<shortcuts>
		<shortcut target='%USYS96%\common\bin\idf.exe'     args='/adm="%USYS96%\uniface\adm\" /asn=.\asn\build.asn /tst VUT_BUILD_S ?' name='UnifaceTDD - Build'/>
		<shortcut target='%USYS96%\common\bin\idf.exe'     args='/adm="%USYS96%\uniface\adm\" /asn=.\asn\idf.asn ?' name='UnifaceTDD - Development'/>
		<shortcut target='%USYS96%\common\bin\uniface.exe' args='/adm="%USYS96%\uniface\adm\" /asn=.\asn\unifacetdd.asn /bat VUT_UUNIT' name='UnifaceTDD - Runtime (batch)'/>
		<shortcut target='%USYS96%\common\bin\uniface.exe' args='/adm="%USYS96%\uniface\adm\" /asn=.\asn\unifacetdd.asn VUT_UUNIT' name='UnifaceTDD - Runtime'/>
	</shortcuts>

	<!--
		A list of folders that the setup tool should create. These would usually
		be folders that the project needs but don't make sense to commit to
		version control. For example, a log folder.
	-->
	<folders>
		<folder name=".\bin" />
		<folder name=".\build" />
		<folder name=".\dbms" />
		<folder name=".\log" />
		<folder name=".\lst" />
	</folders>

	<build-switches asn=".\asn\setup.asn"
		ini=""
		debug="0" />

	<import-meta-dict>1</import-meta-dict>

	<do-import>1</do-import>
	<do-compile>1</do-compile>

</setup-config>
